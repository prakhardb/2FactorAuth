<body>
		<%- locals.flash %>

	<div class="row">
		<div class="col s12 m4 offset-m4">
			<div class="card">
				<div class="card-action teal lighten-1 white-text">
					<h3>Signup Form </h3>
				</div>

				<div class="card-content">
					<form action="/signup" method="POST" name="login_form" id="form">
						
						<div class="input-field">
							<i class="material-icons prefix">account_circle</i>
							<label for="username">Username</label>
							<input type="text" name="username" id="username" required>
						</div><br>


						<div class="input-field">
							<i class="material-icons prefix">vpn_key</i>
							<label for="password">Password</label>
							<input type="password" name="password" id="password" required >
						</div><br>
						<div class="input-field">
							<%- captcha %>
						<!-- <div class="g-recaptcha" data-sitekey="6Lf_kWMUAAAAAFqR0XZPHw_45lTIwZ-2G48k_7uf" id="g-recaptcha-response" ></div> -->
						</div> 
						<br>

						<div class="form-field">
							<button class="btn-large waves-effect waves-dark" style="width:100%;">Signup</button>
						</div>

					</form>
                    <a href="/">Login</a>
				</div>

			</div>
		</div>
	</div>

